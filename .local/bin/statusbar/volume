#!/bin/bash

VOLUME=$( pactl list sinks | grep '^[[:space:]]Volume:' | \
          head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,' )

MUTED=$(pactl list sinks | grep Mute | head -1 | cut -d' ' -f 2)

if [ "$MUTED" = "yes" ]; then
	ICON="ðŸ”‡"
elif [ "$VOLUME" -gt "70" ]; then
	ICON="ðŸ”Š"
elif [ "$VOLUME" -lt "30" ]; then
	ICON="ðŸ”ˆ"
else
	ICON="ðŸ”‰"
fi

echo "${ICON}${VOLUME}%"
